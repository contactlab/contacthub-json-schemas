{
  "$schema": "http://api.contactlab.it/hub#",
  "type": "object",
  "description": "Customer changed a setting on website/app",
  "properties": {
    "customerId": {
      "type": "string",
      "pattern": "^.+$"
    },
    "bringBackProperties": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventBringBackProperties"
    },
    "type": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventType"
    },
    "context": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContext"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "contextInfo": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContextInfo"
    },
    "properties": {
      "type": "object",
      "properties": {
        "setting": {
          "type": "string",
          "description": "The setting changed",
          "enum": [
            "LANGUAGE",
            "TIMEZONE",
            "CURRENCY",
            "EMAIL",
            "PASSWORD",
            "USERNAME",
            "OTHER"
          ]
        },
        "oldValue": {
          "type": "string",
          "description": "The old value of property"
        },
        "newValue": {
          "type": "string",
          "description": "The new value of property"
        },
        "extraProperties": {
          "type": "object",
          "description": "Extra pieces of information you can tie to events you track"
        }
      }
    }
  },
  "required": [
    "type",
    "context"
  ],
  "additionalProperties": false
}